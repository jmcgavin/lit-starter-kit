{
  "name": "litelement-starter-kit",
  "version": "0.0.0",
  "author": "McJordan",
  "description": "A web app starter kit using LitElement, Redux and Material Components",
  "license": "ISC",
  "repository": "https://github.com/jmcgavin/litelement-starter-kit",
  "scripts": {
    "start": "es-dev-server --app-index index.html --node-resolve --watch --open",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "serve": "cd dist && es-dev-server --app-index=index.html --compatibility=none --http2 --open",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix"
  },
  "dependencies": {
    "@material/mwc-button": "^0.21.0",
    "lit-element": "^2.5.1",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.1.0",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.1",
    "babel-eslint": "^10.1.0",
    "es-dev-server": "^2.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.46.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "browser": true
    }
  }
}
